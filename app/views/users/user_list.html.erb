<h1>List of users</h1>


<form action="/users/add" method="post">
  <div>
    <label for="username_box">
      Username
    </label>
    <input type="text" id="username_box" name="new_username" placeholder="Enter a username...">
    <button>
      Add user
    </button>
  </div>
</form>
<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Username
    </th>

    <th>
    </th>
  </tr>

  <%@list_of_users.each do |user|%>
    <tr>
      <td>
        <%=user.id%>
      </td>

      <td>
        <%=user.username%>
      </td>
      
      <td>
        <a href="/users/<%=user.username%>">Show details</a>
      </td>
    </tr>
  <%end%>
</table>
